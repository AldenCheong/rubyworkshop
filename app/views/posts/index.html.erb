<p id="notice"><%= notice %></p>
<h1>Listing posts</h1>
<% @posts.each do |post| %>
  Title: <%= post.title %><br>
  Description: <%= post.description %><br>
  <%= link_to 'Show', post %>
  <%= link_to 'Edit', edit_post_path(post) %>
  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %><br><br>
<% end %>
<br>

<%= link_to 'New Post', new_post_path %>
